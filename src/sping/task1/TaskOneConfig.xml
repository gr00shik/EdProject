<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="race"  class="sping.task1.classes.raceImpl.RaceImpl">
       <property name="gameHorse" ref="horse" />
       <property name="gameRider" ref="rider" />
    </bean>

    <bean id="horse" class="sping.task1.classes.horseImpl.HorseImpl" >
        <property name="breed" ref="breed" />
    </bean>

    <bean id="rider" class="sping.task1.classes.riderImpl.RiderImpl" />

    <bean id="breed" class="sping.task1.classes.breedImpl.BreedImpl" />

</beans>